<div class="container-fluid w-50 text-center">
<h2>アカウント編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-50" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field mt-2">
    <%= f.label :変更後パスワード %> <i>(変更する場合のみ入力)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "w-50" %>
    <% if @minimum_password_length %>
      <br />
      <em>最小文字数 <%= @minimum_password_length %></em>
    <% end %>
  </div>

  <div class="field mt-2">
    <%= f.label :パスワード確認用 %> <i>(変更する場合のみ入力)</i><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-50" %>
  </div>

  <div class="field mt-2">
    <%= f.label :現在のパスワード %><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "w-50" %>
  </div>

  <div class="actions">
    <%= f.submit "更新", class: "btn btn-primary w-50 mt-3" %>
  </div>
<% end %>

<%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に削除してよろしいですか" }, method: :delete, class: "btn btn-danger w-50 my-3" %>

<%= link_to "戻る", users_account_path, class: "btn btn-secondary w-50" %>
</div>
