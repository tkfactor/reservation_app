<div class="container-devise">
 <p>ログイン</p>
 <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label "必須", class: "badge badge-danger py-1" %>
    <%= f.email_field :email, placeholder: "メールアドレス", autofocus: true, autocomplete: "email", class: "text_field" %>
  </div>

  <div class="field">
    <%= f.label "必須", class: "badge badge-danger py-1" %>
    <%= f.password_field :password,placeholder: "パスワード", autocomplete: "current-password", class:"text_field" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary w-50 my-3" %>
  </div>
 <% end %>

<%= render "devise/shared/links" %>
</div>
