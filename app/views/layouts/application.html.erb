<!DOCTYPE html>
<html>
  <head>
    <title>ReservationApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
   <header class="header text-white w-100">
    <div class="header-left-nav">
     <%= link_to root_path do %>
     <%= image_tag 'https://presite-potepancamp-rails-02.herokuapp.com/assets/logo.png' %>
     <% end %>
     <div class="header-search pt-4">
      <%= search_form_for @q, url: search_rooms_path do |f| %>
       <%= f.search_field :room_address_eq, placeholder: "エリア" %>
       <%= f.search_field :room_name_cont, placeholder: "キーワード" %>
       <%= f.submit "検索" %>
      <% end %>
    </div>
    <div class="header-right-nav">
     <% if user_signed_in? %>
      <p class="user_name pt-4 mr-3"><%= current_user.name %></p>
     <div class="dropdown pt-3">
      <button class="btn btn-secondary dropdown-toggle"
      type="button" id="dropdownMenu1" data-toggle="dropdown"
      aria-haspopup="true" aria-expanded="false">
      メニュー
     </button>

      <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
       <div class="dropdown-item"><%= link_to "ルーム登録", new_room_path %></div>
       <div class="dropdown-item"><%= link_to "予約済みルーム一覧", reservations_path %></div>
       <div class="dropdown-item"><%= link_to "登録済みルーム一覧", rooms_path %></div>
       <div class="dropdown-item"><%= link_to "設定", users_profile_path %></div>
       <div class="dropdown-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></div>
      </div>
     </div>
    <% else %>
   </div>

    <div class="header-right-nav">
     <div class="dropdown_before pr-3">
      <%= link_to "ログイン", new_user_session_path, class: 'btn btn-primary mt-3 mr-2' %>
      <%= link_to "登録する", new_user_registration_path, class: 'btn btn-secondary mt-3' %>
    <% end %>
     </div>
    </div>
   </header>
    <%= yield %>
    <footer>
    © 2020 POTEPAN.INC.
    </footer>
  </body>
</html>
